<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    android:orientation="vertical"
    tools:context="com.example.arzu.finalproject.MainActivity"
    android:weightSum="1"
    android:background="@drawable/arkaplan">

    <Button
        android:text="Türkiye Yemekleri"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_türkiye"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="100dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="60dp"
        />

    <Button
        android:text="Hindistan Yemekleri"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_hindistan"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="80dp"
        />
    <Button
        android:text="İtalya Yemekleri"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_italya"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="60dp"
        />
    <Button
        android:text="Uzak Doğu Yemekleri"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_cin"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="80dp"
        />
    <Button
        android:text="Malzemeye göre yemek"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_yemek_ara"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="60dp"
        />
    <Button
        android:text="Favorilerim"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_favori"
        android:background="@drawable/shape_btn"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="80dp"
        />


</LinearLayout>
