<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yemek_ara"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.arzu.finalproject.yemek_ara"
    android:weightSum="1"
    android:background="@drawable/yemek">

    <TextView
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_malzeme"
        android:gravity="left"
        android:textSize="24sp"
        tools:ignore="HardcodedText"
        android:text="LÃ¼tfen Malzeme Giriniz"
        android:textColor="@android:color/background_dark" />


    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextView1"
        android:layout_marginTop="10dp"
        android:hint="1. Malzeme"
        tools:ignore="HardcodedText" />
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextView2"
        android:layout_marginTop="10dp"
        android:hint="2. Malzeme"
        tools:ignore="HardcodedText" />
    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoCompleteTextView3"
        android:layout_marginTop="10dp"
        android:hint="3. Malzeme"
        tools:ignore="HardcodedText" />

    <Button
        android:text="Ara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_btn"
        tools:ignore="HardcodedText" />

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_null"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textColor="@android:color/holo_red_dark" />

    <GridView
        android:numColumns="auto_fit"
        android:gravity="center"
        android:columnWidth="100dp"
        android:stretchMode="columnWidth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        tools:ignore="InefficientWeight" />

</LinearLayout>
