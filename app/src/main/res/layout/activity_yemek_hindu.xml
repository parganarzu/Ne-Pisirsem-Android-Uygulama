<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yemek_hindu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="30dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="15dp"
    tools:context="com.example.arzu.finalproject.yemek_hindu"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/hindu2"
    tools:ignore="RtlHardcoded">

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/chickentikla"
        android:id="@+id/imgbtn1"
        tools:ignore="ContentDescription" />

    <TextView
        android:text="Chicken Tikka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/dal"
        android:id="@+id/imgbtn2"
        android:layout_marginTop="8dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:text="Dal Makhani"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/murg"
        android:id="@+id/imgbtn3"
        android:layout_marginTop="8dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:text="Murg chatpata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/punjabi"
        android:id="@+id/imgbtn4"
        android:layout_marginTop="8dp"
        tools:ignore="ContentDescription" />
    <TextView
        android:text="Punjabi Samosa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        tools:ignore="HardcodedText" />

</LinearLayout>
